### Master node rules ###

*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]
:FILTERS - [0:0]
:DOCKER-USER - [0:0]

-F INPUT
-F DOCKER-USER
-F FILTERS

# BASIC Allow
-A INPUT -i lo -j ACCEPT

# Chain to FILTERS
-A DOCKER-USER -i eth0 -j FILTERS
-A INPUT -p icmp --icmp-type any -j ACCEPT
-A INPUT -p tcp --match multiport --dports 2379:2380 -j ACCEPT
-A INPUT -p tcp --match multiport --dports 10249:10252 -j ACCEPT
-A INPUT -j FILTERS

# COMMON FIREWALL RULES

# ALLOW something
-A FILTERS -m state --state ESTABLISHED,RELATED -j ACCEPT
-A FILTERS -m state --state NEW -m tcp -p tcp --dport 22 -j ACCEPT
-A FILTERS -m state --state NEW -m tcp -p tcp --dport 23 -j ACCEPT
-A FILTERS -m state --state NEW -m tcp -p tcp --dport 80 -j ACCEPT
-A FILTERS -m state --state NEW -m tcp -p tcp --dport 443 -j ACCEPT
-A FILTERS -m state --state NEW -m tcp -p tcp --dport 6443 -j ACCEPT
-A FILTERS -m state --state NEW -m tcp -p tcp --dport 2381 -j ACCEPT
-A FILTERS -m state --state NEW -m tcp -p tcp --dport 8443 -j ACCEPT
-A FILTERS -m state --state NEW -m tcp -p tcp --dport 179 -j ACCEPT
-A FILTERS -m state --state NEW -m tcp -p tcp --dport 9100 -j ACCEPT
-A FILTERS -m state --state NEW -m udp -p udp --dport 4789 -j ACCEPT

# DENY something
-A FILTERS -j REJECT --reject-with icmp-host-prohibited

COMMIT